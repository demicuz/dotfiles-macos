set clipboard+=unnamed
set ignorecase smartcase

""" Map leader to space ---------------------
let mapleader=" "

""" Plugins  --------------------------------
set which-key
set surround
set multiple-cursors
set commentary
set argtextobj
set sneak
set textobj-entire
set ReplaceWithRegister
Plug 'machakann/vim-highlightedyank'

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"
let g:highlightedyank_highlight_duration="100"
let g:highlightedyank_highlight_color = "rgba(180, 216, 253, 155)"

""" Common settings -------------------------
set showmode
set so=3
set incsearch
set nu

""" Idea specific settings ------------------
set ideajoin
set ideastatusicon=gray
set idearefactormode=keep

""" Mappings --------------------------------
map gh ^
map gl $

" map <leader>f <Plug>(easymotion-s)
" map <leader>e <Plug>(easymotion-f)

map <leader>d <Action>(Debug)
map <leader>r <Action>(RenameElement)
map <leader>c <Action>(CloseAllEditorsButActive)
" map <leader>c <Action>(Stop)
" map <leader>c <Action>(CloseOtherTabs)
" map <leader>c <Action>(VimMotionUnmatchedParenClose)
map <leader>z <Action>(ToggleDistractionFreeMode)

map <leader>s <Action>(SelectInProjectView)
map <leader>p <Action>(Project)
" map <leader>a <Action>(Annotate)
map <leader>h <Action>(Vcs.ShowTabbedFileHistory)
map <S-Space> <Action>(GotoNextError)

map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>o <Action>(FileStructurePopup)
map <leader>g <Action>(EditorToggleShowGutterIcons)
map <leader>l <Action>(EditorToggleShowLineNumbers)

